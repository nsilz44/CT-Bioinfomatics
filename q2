#!/usr/bin/python
import time
import sys
import numpy as np

# YOUR FUNCTIONS GO HERE -------------------------------------
def backtrack(y,z,seq1,seq2,b):
    
def score(i,j,seq1,seq2):
    al = seq1[i]
    bl = seq2[j]
    if al != bl:
        ad = -3
    elif al == 'A':
        ad = 3
    elif al == 'C':
        ad = 2
    elif al == 'G':
        ad = 1
    #last is 'T'
    else:
        ad = 2
    return ad
    
#initailizes matrix with zeros
def matrix(seq1,seq2):
    seq1 = '-' + seq1
    seq2 = '-' + seq2
    best_score = 0
    m = np.zeros((len(seq1),len(seq2)))
    b = np.empty((len(seq1),len(seq2)),dtype = 'S1')
    b[:,0] = 'E'
    b[0,:] = 'E'
    for j in range(1,len(seq2)):
        for i in range(1,len(seq1)):
            m[i,j] = max(score(i,j,seq1,seq2) + m[i-1,j-1],m[i-1] - 4
            if m[i,j] > best_score:
                best_score = m[i,j]
                y = i
                z = j
    
    print(m)
    print(b)
    print(best_score)
    

        
